{
  "manifest_version": 3,
  "name": "Moodle Quiz Keyboard Navigator",
  "version": "1.0",
  "description": "キーボード（1-4キー）でMoodleクイズの選択肢を選択できる拡張機能",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://moodle.s.kyushu-u.ac.jp/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
